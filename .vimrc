" Code QoL options
set number autoindent hlsearch ignorecase incsearch smartcase
set encoding=utf-8
set scrolloff=1
syntax enable
set ruler
set cursorline
set noerrorbells
"set visualbell
set title
set background=dark
set wildmenu
set linebreak

" Tab spacing and indentation
set tabstop=4 softtabstop=0 shiftround expandtab shiftwidth=4 smarttab
filetype plugin indent on 

" Vim caching and backups
set backupdir=~/.cache/vim
set dir=~/.cache/vim

" Code folding options
set foldmethod=indent
set foldnestmax=3
set nofoldenable
