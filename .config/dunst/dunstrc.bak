[global]
    font = Inconsolata 12
    geometry = "500x250-5+40"
    browser = chromium
    plain_text = no
    markup = yes
    sort = no
    indicate_hidden = no
    alignment = left
    stack_duplicates = yes
    hide_duplicates_count = yes
    sticky_history = no
    ignore_newline = no
    word_wrap = yes
    shrink = no
    transparency = 10
    corner_radius = 3

    # age duration of notif. items
    set_transient = yes
    idle_threshold = 0
    show_age_threshold = -1

    # History
    history_length = 1

    format = "<span><b>%s</b></span>\n%b"
    padding = 5
    horizontal_padding = 5
    separator_color = frame
    startup_notification = false
    separator_height = 1
    line_height = 3
    frame_width = 3

    icon_path=""          # disable default icons
    icon_position = right

    frame_color = "#e68db9"
    timeout = 5

[urgency_low]
    foreground = "#0f0f0f"
    background = "#fffaff"
    timeout = 2

[urgency_normal]
    foreground = "#0f0f0f"
    background = "#fffaff"
    timeout = 3

[urgency_critical]
    foreground = "#0f0f0f"
    background = "#fffaff"
    timeout = 5
