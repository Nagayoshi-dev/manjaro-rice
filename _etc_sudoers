Defaults rootpw
Defaults editor=/usr/bin/nvim

root ALL=(ALL) ALL
%wheel ALL=(ALL) ALL, !/usr/bin/su

nagayoshi lunaria = (root) NOPASSWD: /usr/bin/shutdown
nagayoshi lunaria = (root) NOPASSWD: /usr/bin/reboot
nagayoshi lunaria = (root) NOPASSWD: /usr/bin/swapoff
nagayoshi lunaria = (root) NOPASSWD: /usr/bin/swapon

## Read drop-in files from /etc/sudoers.d
## (the '#' here does not indicate a comment)
#includedir /etc/sudoers.d
